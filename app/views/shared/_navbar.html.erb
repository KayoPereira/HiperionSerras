  <%= image_tag "logo.png", class: "logo-nav ms-5" %>
  <div class="d-flex justify-content-center align-items-center">
    <ul class="btn-circles list-unstyled me-5">
      <%= link_to "Produtos", "/", class: "link-nav" %>
      <%= link_to "Serviços", "/", class: "link-nav mx-4" %>
      <%= link_to "Sobre", "/", class: "link-nav" %>
      <%= link_to "/", class: "btn-nav ms-5 me-2" do %>
        <li class="btn-circle-item">
          <i class="fa-solid fa-bell"></i>
        </li>
      <% end %>
      <%= link_to "/", class: "btn-nav" do %>
        <li class="btn-circle-item">
          <i class="fa-solid fa-gear"></i>
        </li>
      <% end %>
    </ul>
    <% if user_signed_in? && current_user.avatar.attached? %>
      <%= image_tag rails_blob_path(current_user.avatar, only_path: true),
                    class: "avatar-nav me-5",
                    alt: "Avatar de #{current_user.display_name}",
                    style: "border-radius: 50%; width: 40px; height: 40px; object-fit: cover;" %>
    <% else %>
      <%= image_tag "sem-imagem-avatar.png",
                    class: "avatar-nav me-5",
                    alt: "Avatar padrão",
                    style: "border-radius: 50%; width: 40px; height: 40px;" %>
    <% end %>
  </div>
