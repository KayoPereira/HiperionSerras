<div class="auth-container">
  <div class="auth-card">
    <!-- Seção do Formulário -->
    <div class="auth-form-section">
      <div class="auth-logo">
        <%= link_to root_path do %>
          <%= image_tag "logo.png", alt: "Hiperion Serras" %>
        <% end %>
      </div>

      <h1 class="auth-title">Nova Senha</h1>
      <p class="auth-subtitle">Digite sua nova senha para continuar</p>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "auth-form", data: { controller: "auth", auth_form_target: "form" } }) do |f| %>
        <%= f.error_notification %>

        <%= f.input :reset_password_token, as: :hidden %>
        <%= f.full_error :reset_password_token %>

        <div class="form-group">
          <%= f.input :password,
                      required: true,
                      autofocus: true,
                      input_html: {
                        autocomplete: "new-password",
                        class: "form-control",
                        placeholder: "Nova senha#{@minimum_password_length ? " (mín. #{@minimum_password_length} caracteres)" : ""}",
                        data: { auth_password_field_target: "passwordField" }
                      },
                      label: false,
                      wrapper: false %>
        </div>

        <div class="form-group">
          <%= f.input :password_confirmation,
                      required: true,
                      input_html: {
                        autocomplete: "new-password",
                        class: "form-control",
                        placeholder: "Confirme sua nova senha",
                        data: { auth_confirm_password_field_target: "confirmPasswordField" }
                      },
                      label: false,
                      wrapper: false %>
        </div>

        <%= f.button :submit, "Alterar Senha", class: "auth-btn", data: { auth_submit_button_target: "submitButton" } %>

        <div class="auth-links">
          <%= link_to "Voltar para login", new_session_path(resource_name) %>
        </div>
      <% end %>
    </div>

    <!-- Seção de Branding -->
    <div class="auth-brand-section">
      <div class="brand-content">
        <div class="brand-icon">
          <i class="fa-solid fa-shield-halved"></i>
        </div>
        <h2 class="brand-title">Segurança em Primeiro Lugar</h2>
        <p class="brand-description">
          Escolha uma senha forte para manter sua conta segura.
          Use uma combinação de letras, números e símbolos.
        </p>
      </div>
    </div>
  </div>
</div>
