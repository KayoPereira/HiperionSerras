<div class="d-flex">
  <div class="left">
    <div class="container-left">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <h2>Cadastre-se</h2>
          <div class="w-100 d-flex justify-content-between">
            <%= f.input :first_name,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "Nome", class: "w-100" },
                        label: false,
                        placeholder: "Nome" %>
            <%= f.input :last_name,
                        required: true,
                        input_html: { autocomplete: "Nome", class: "w-100" },
                        label: false,
                        placeholder: "Sobrenome" %>
          </div>
          <div class="w-100 d-flex justify-content-between">
            <%= f.input :avatar, as: :file, label: false %>
          </div>
          <%= f.input :email,
                      required: true,
                      input_html: { autocomplete: "Email" },
                      label: false,
                      placeholder: "Email" %>
          <div class="w-100 d-flex justify-content-between">
            <%= f.input :password,
                        required: true,
                        input_html: { autocomplete: "current-password", class: "w-100" },
                        label: false,
                        placeholder: "Senha" %>
            <%= f.input :password_confirmation,
                        required: true,
                        input_html: { autocomplete: "current-password", class: "w-100" },
                        label: false,
                        placeholder: "Confirme sua senha" %>
          </div>
          <div class="form-actions d-flex align-items-center mb-3">
            <%= f.button :submit, "Entrar", class: "btn btn-primary" %>
            <%= f.input :remember_me, as: :boolean, label: "Lembre-se de mim" if devise_mapping.rememberable? %>
          </div>
          <%= render "devise/shared/links" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="right">

  </div>
</div>