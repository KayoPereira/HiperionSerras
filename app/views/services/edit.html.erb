<div class="container mt-4">
  <div class="row">
    <div class="col-md-10 mx-auto">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
          <h1>
            <i class="fa-solid fa-handshake me-2"></i>Editar Serviço
          </h1>
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
              <li class="breadcrumb-item">
                <%= link_to "Início", root_path, class: "text-decoration-none" %>
              </li>
              <li class="breadcrumb-item">
                <%= link_to "Serviços", services_path, class: "text-decoration-none" %>
              </li>
              <li class="breadcrumb-item">
                <%= link_to @service.title, service_path(@service), class: "text-decoration-none" %>
              </li>
              <li class="breadcrumb-item active" aria-current="page">Editar</li>
            </ol>
          </nav>
        </div>
      </div>

      <div class="card" style="border-color: #F7C21A;">
        <div class="card-body">
          <%= render 'form', service: @service %>
        </div>
      </div>
    </div>
  </div>
</div>
