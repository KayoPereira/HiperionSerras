<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h3>Teste de Upload de Avatar</h3>
        </div>
        <div class="card-body">
          <% if @user.avatar.attached? %>
            <div class="text-center mb-3">
              <%= image_tag @user.avatar, style: "width: 100px; height: 100px; object-fit: cover; border-radius: 50%;" %>
              <p class="mt-2">Avatar atual</p>
            </div>
          <% else %>
            <p class="text-center text-muted">Nenhum avatar carregado</p>
          <% end %>

          <%= form_with model: @user, url: test_avatar_path, method: :patch, multipart: true, local: true do |f| %>
            <div class="mb-3">
              <%= f.label :first_name, "Nome", class: "form-label" %>
              <%= f.text_field :first_name, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :last_name, "Sobrenome", class: "form-label" %>
              <%= f.text_field :last_name, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :avatar, "Avatar", class: "form-label" %>
              <%= f.file_field :avatar, class: "form-control", accept: "image/*" %>
            </div>

            <%= f.submit "Atualizar", class: "btn btn-primary" %>
          <% end %>

          <div class="mt-3">
            <%= link_to "Voltar para ediÃ§Ã£o", edit_user_registration_path, class: "btn btn-secondary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
