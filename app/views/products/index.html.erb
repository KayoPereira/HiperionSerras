<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1>Produtos</h1>
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item">
            <%= link_to @category.title, category_path(@category), class: "text-decoration-none" %>
          </li>
          <li class="breadcrumb-item">
            <%= link_to @subcategory.title, [@category, @subcategory], class: "text-decoration-none" %>
          </li>
          <li class="breadcrumb-item active" aria-current="page">Produtos</li>
        </ol>
      </nav>
    </div>
    <div>
      <% if user_signed_in? %>
        <%= link_to "Novo Produto", new_category_subcategory_product_path(@category, @subcategory),
                    class: "btn btn-warning" %>
      <% end %>
      <%= link_to "Voltar", [@category, @subcategory],
                  class: "btn btn-outline-secondary ms-2" %>
    </div>
  </div>

  <% if @products.any? %>
    <div class="row">
      <% @products.each do |product| %>
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card h-100">
            <% if product.photos.attached? && product.photos.first.present? %>
              <%= image_tag rails_blob_path(product.photos.first, only_path: true),
                            class: "card-img-top",
                            alt: product.title %>
            <% else %>
              <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                <i class="fa-solid fa-image text-muted" style="font-size: 3rem;"></i>
              </div>
            <% end %>

            <div class="card-body d-flex flex-column">
              <h6 class="card-title">
                <%= product.title %>
                <% if product.is_service? %>
                  <span class="badge bg-info ms-1">
                    <i class="fa-solid fa-handshake me-1"></i>Serviço
                  </span>
                <% end %>
              </h6>
              <p class="card-text text-muted small mb-2">
                <i class="fa-solid fa-tag me-1"></i>
                Linha: <%= product.line %>
              </p>

              <div class="mt-auto">
                <% if user_signed_in? %>
                  <div class="btn-group w-100" role="group">
                    <%= link_to "Ver", [@category, @subcategory, product],
                                class: "btn btn-outline-warning btn-sm" %>
                    <%= link_to "Editar", edit_category_subcategory_product_path(@category, @subcategory, product),
                                class: "btn btn-outline-secondary btn-sm" %>
                  </div>
                <% else %>
                  <%= link_to "Ver Detalhes", [@category, @subcategory, product],
                              class: "btn btn-outline-warning btn-sm w-100" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-5">
      <i class="fa-solid fa-box-open text-muted mb-3" style="font-size: 4rem;"></i>
      <h3 class="text-muted">Nenhum produto encontrado</h3>
      <p class="text-muted">Esta subcategoria ainda não possui produtos.</p>
      <% if user_signed_in? %>
        <%= link_to "Criar Primeiro Produto", new_category_subcategory_product_path(@category, @subcategory),
                    class: "btn btn-primary" %>
      <% end %>
    </div>
  <% end %>
</div>
