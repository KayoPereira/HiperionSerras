<!-- Banner responsivo -->

<section class="banner-section">
  <% banners = ["home.mp4", "banner.png"] %> <!-- ou variável vinda do controller, como @banners -->
  <div id="bannerCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel" data-bs-interval="21000">
    <div class="carousel-inner">
      <% banners.each_with_index do |banner, index| %>
        <% if banner == "home.mp4" %>
          <div class="carousel-item <%= 'active' if index == 0 %>">
            <%= video_tag "home.mp4", autoplay: true, loop: true, muted: true, class: "d-block w-100 img-fluid", alt: "Video Hiperion Serras" %>
          </div>
        <% else %>
          <div class="carousel-item <%= 'active' if index == 0 %>">
            <%= image_tag banner, class: "d-block w-100 img-fluid", alt: "Banner Hiperion Serras #{index + 1}" %>
          </div>
        <% end %>
      <% end %>
    </div>

    <% if banners.size > 1 %>
      <!-- Controles -->
      <button class="carousel-control-prev" type="button" data-bs-target="#bannerCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Anterior</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#bannerCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Próximo</span>
      </button>

      <!-- Indicadores -->
      <div class="carousel-indicators">
        <% banners.each_with_index do |_, index| %>
          <button type="button" data-bs-target="#bannerCarousel" data-bs-slide-to="<%= index %>"
                  class="<%= 'active' if index == 0 %>" aria-current="<%= index == 0 %>" aria-label="Slide <%= index + 1 %>">
          </button>
        <% end %>
      </div>
    <% end %>
  </div>
</section>


<!-- Seção hero tagline -->
<section class="hero-tagline-section w-100">
  <div class="hero-tagline-container text-center">
    <h2 class="hero-tagline-text">
      Lâminas de alta tecnologia e precisão que a sua empresa precisa
    </h2>
  </div>
</section>

<!-- Seção de categorias -->
<section class="categories-section py-4 py-md-5">
  <div class="container">
    <div class="row g-3 g-md-4 justify-content-center">
      <% @categories.each_with_index do |category, index| %>
        <div class="col-6 col-md-4 col-lg-3" data-scroll-animations-target="animateElement" data-animation="fadeInUp" data-delay="<%= index * 100 + 400 %>">
          <%= link_to (category.title == "Serviços" ? services_path : category_path(category)), class: "text-decoration-none" do %>
            <div class="card-category h-100">
              <div class="card-category-image">
                <% if category.photo.attached? %>
                  <%= image_tag rails_blob_path(category.photo, only_path: true),
                                class: "img-fluid w-100",
                                alt: category.title,
                                style: "height: 150px; object-fit: cover;" %>
                <% else %>
                  <div class="placeholder-image d-flex align-items-center justify-content-center"
                       style="height: 150px; background-color: #f8f9fa;">
                    <% if category.title == "Serviços" %>
                      <i class="fa-solid fa-handshake text-muted" style="font-size: 2rem;"></i>
                    <% else %>
                      <i class="fa-solid fa-image text-muted" style="font-size: 2rem;"></i>
                    <% end %>
                  </div>
                <% end %>
              </div>
              <div class="card-category-content p-3">
                <h5 class="card-category-title text-center mb-0">
                  <%= category.title %>
                </h5>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</section>

<section class="services-section" style="background-color: black; height: 300px; display: flex; position: relative; justify-content: center;">
  <div class="services-container" style="display: flex; justify-content: center; width: 100%;">
    <div class="services-content d-flex flex-column justify-content-center align-items-center" data-scroll-animations-target="animateElement" data-animation="fadeInLeft" data-delay="200">
      <h2 class="services-title text-white text-center">
        Serviços que oferecemos
      </h2>
      <h4 class="services-subtitle text-white text-center">
        A <span class="brand-highlight" style="color: #F7C21A;">Hiperion Serras</span>
        oferece os serviços de:
        <p class="m-0">Afiação de Serras</p>
        <p class="m-0">Treinamento in Company</p>
        <p class="m-0">Consultoria de Processos de Corte</p>
      </h4>
      <%= link_to services_path,
                  class: "services-btn text-decoration-none",
                  data: {
                    turbo: true,
                    controller: "scroll-animations",
                    action: "click->scroll-animations#smoothScroll"
                  },
                  title: "Conheça nossos serviços de consultoria e recondicionamento" do %>
        Conheça mais
      <% end %>
    </div>
  </div>
  <div class="services-image d-none d-md-block" style="position: absolute; right: 0; top: 0;" data-scroll-animations-target="animateElement" data-animation="fadeInRight" data-delay="400">
    <%= image_tag "meia-serra2.png", alt: "Serra Hiperion", id: 'saw-image' %>
  </div>
</section>

