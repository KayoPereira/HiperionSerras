<div class="container mt-4">
  <div class="row">
    <div class="col-md-10 mx-auto">

      <!-- Informações da Categoria (apenas para usuários logados) -->
      <% if user_signed_in? %>
        <div class="card mb-4">
          <div class="d-flex justify-content-center align-items-center">
            <% if @category.photo.attached? %>
              <%= image_tag rails_blob_path(@category.photo, only_path: true),
                            class: "card-img-top",
                            style: "max-height: 400px; max-width: 400px; object-fit: no-repeat;",
                            alt: @category.title %>
            <% else %>
              <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 400px;">
                <i class="fa-solid fa-image text-muted" style="font-size: 6rem;"></i>
              </div>
            <% end %>
          </div>

          <div class="card-body">
            <h1 class="card-title"><%= @category.title %></h1>

            <div class="mt-3">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <h6 class="text-muted mb-1">Subcategorias</h6>
                  <p class="mb-0">
                    <i class="fa-solid fa-layer-group me-1"></i>
                    <%= pluralize(@category.subcategories.count, 'subcategoria') %>
                  </p>
                </div>
                <%= link_to "Gerenciar Subcategorias", category_subcategories_path(@category),
                            class: "btn btn-outline-primary btn-sm" %>
              </div>
            </div>

            <div class="mt-4">
              <small class="text-muted">
                Criada em: <%= l(@category.created_at, format: :long) %>
                <% if @category.updated_at != @category.created_at %>
                  <br>Atualizada em: <%= l(@category.updated_at, format: :long) %>
                <% end %>
              </small>
            </div>
          </div>

          <div class="card-footer bg-transparent">
            <div class="btn-group w-100" role="group">
              <%= link_to "Voltar", categories_path, class: "btn btn-outline-secondary" %>
              <%= link_to "Editar", edit_category_path(@category), class: "btn btn-primary" %>
              <%= link_to "Excluir", category_path(@category),
                          method: :delete,
                          class: "btn btn-danger",
                          data: {
                            confirm: "Tem certeza que deseja excluir esta categoria?",
                            turbo_method: :delete
                          } %>
            </div>
          </div>
        </div>
      <% else %>
        <!-- Título simples para usuários não logados -->
        <div class="mb-4">
          <h1 class="text-center"><%= @category.title %></h1>
        </div>
      <% end %>

      <!-- Subcategorias (visível para todos) -->
      <div class="card">
        <div class="card-body">
          <% if @category.subcategories.any? %>
            <div class="row">
              <% @category.subcategories.order(:title).each do |subcategory| %>
                <div class="col-md-6 col-lg-4 mb-3">
                  <div class="card h-100">
                    <% if subcategory.photo.attached? %>
                      <%= image_tag rails_blob_path(subcategory.photo, only_path: true),
                                    class: "card-img-top",
                                    style: "height: 150px; object-fit: cover;",
                                    alt: subcategory.title %>
                    <% else %>
                      <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 150px;">
                        <i class="fa-solid fa-image text-muted" style="font-size: 2rem;"></i>
                      </div>
                    <% end %>

                    <div class="card-body d-flex flex-column">
                      <h6 class="card-title"><%= subcategory.title %></h6>

                      <div class="mt-auto">
                        <% if user_signed_in? %>
                          <div class="btn-group w-100" role="group">
                            <%= link_to "Ver", [@category, subcategory], class: "btn btn-outline-primary btn-sm" %>
                            <%= link_to "Editar", edit_category_subcategory_path(@category, subcategory), class: "btn btn-outline-secondary btn-sm" %>
                          </div>
                        <% else %>
                          <%= link_to "Ver Detalhes", [@category, subcategory], class: "btn btn-outline-warning btn-sm w-100" %>
                        <% end %>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-4">
              <i class="fa-solid fa-folder-open text-muted mb-3" style="font-size: 3rem;"></i>
              <h5 class="text-muted">Nenhuma subcategoria encontrada</h5>
              <p class="text-muted">Esta categoria ainda não possui subcategorias.</p>
              <% if user_signed_in? %>
                <%= link_to "Criar Primeira Subcategoria", new_category_subcategory_path(@category),
                            class: "btn btn-primary" %>
              <% end %>
            </div>
          <% end %>
        </div>

        <% unless user_signed_in? %>
          <div class="card-footer bg-transparent text-center">
            <%= link_to "Voltar", categories_path, class: "btn btn-outline-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
