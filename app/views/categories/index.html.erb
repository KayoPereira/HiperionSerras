<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Categorias</h1>
    <% if user_signed_in? %>
      <%= link_to "Nova Categoria", new_category_path, class: "btn btn-warning" %>
    <% end %>
  </div>

  <% if @categories.any? %>
    <div class="row">
      <% @categories.each do |category| %>
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card h-100" style="border-color: #F7C21A;">
            <% if category.photo.attached? %>
              <%= image_tag rails_blob_path(category.photo, only_path: true),
                            class: "card-img-top",
                            alt: category.title %>
            <% else %>
              <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                <i class="fa-solid fa-image text-muted" style="font-size: 3rem;"></i>
              </div>
            <% end %>

            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= category.title %></h5>

              <div class="mt-auto">
                <% if user_signed_in? %>
                  <div class="btn-group w-100" role="group">
                    <%= link_to "Ver", category_path(category), class: "btn btn-outline-warning btn-sm" %>
                    <%= link_to "Editar", edit_category_path(category), class: "btn btn-outline-secondary btn-sm" %>
                    <%= link_to "Excluir", category_path(category),
                                method: :delete,
                                class: "btn btn-outline-danger btn-sm",
                                data: {
                                  confirm: "Tem certeza que deseja excluir esta categoria?",
                                  turbo_method: :delete
                                } %>
                  </div>
                <% else %>
                  <div class="d-grid">
                    <%= link_to "Ver", category_path(category), class: "btn btn-outline-warning btn-sm" %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-5">
      <i class="fa-solid fa-folder-open text-muted mb-3" style="font-size: 4rem;"></i>
      <h3 class="text-muted">Nenhuma categoria encontrada</h3>
      <% if user_signed_in? %>
        <p class="text-muted">Comece criando sua primeira categoria.</p>
        <%= link_to "Criar Primeira Categoria", new_category_path, class: "btn btn-primary" %>
      <% else %>
        <p class="text-muted">Não há categorias disponíveis no momento.</p>
      <% end %>
    </div>
  <% end %>
</div>
